<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeCalcButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="ThemeCalcButtonVariant" parent="ThemeCalcButton">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ThemeCalcOutput" parent="Widget.MaterialComponents.TextView">
        <item name="drawableLeftCompat">@drawable/ic_android_black_24dp</item>
        <item name="android:drawableTint">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/bg_output_calc</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>